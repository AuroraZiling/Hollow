<Application
    RequestedThemeVariant="Dark"
    x:Class="Hollow.App"
    xmlns="https://github.com/avaloniaui"
    xmlns:avalonia="clr-namespace:Material.Icons.Avalonia;assembly=Material.Icons.Avalonia"
    xmlns:local="using:Hollow"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Application.DataTemplates>
        <local:ViewLocator />
    </Application.DataTemplates>

    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceInclude Source="Resources/Palette.axaml" />
                <ResourceInclude Source="Resources/Fonts.axaml" />

                <ResourceInclude Source="Controls/StartGameButton.axaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>

    </Application.Resources>

    <Application.Styles>
        <FluentTheme DensityStyle="Normal" />
        <avalonia:MaterialIconStyles />

        <StyleInclude Source="Styles/Button.axaml" />
        <StyleInclude Source="Styles/RadioButton.axaml" />
        <StyleInclude Source="Styles/TextBlock.axaml" />
        <StyleInclude Source="Styles/TabItem.axaml" />
        <StyleInclude Source="Styles/HyperlinkButton.axaml" />
        <StyleInclude Source="Styles/ScrollViewer.axaml" />
        <StyleInclude Source="Styles/ScrollBar.axaml" />
    </Application.Styles>
</Application>